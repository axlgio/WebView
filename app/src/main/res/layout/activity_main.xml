<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E2EF"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/toolbar_background"
        android:elevation="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Choose your Hotel"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Top Hotel"
                android:textAlignment="textEnd"
                android:textColor="@color/purple_200"
                android:textSize="30sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/item_background"
                android:elevation="5dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_decameron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/deca" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/cv_decameron"
                    android:text="Royal Decameron Salinitas"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_card_title"
                    android:layout_toRightOf="@id/cv_decameron"
                    android:text="Carretera al Litoral Km. 84 Acajutla,
Sonsonate"
                    android:textColor="#8A8A8A"
                    android:textSize="14dp" />
                <Button
                    android:id="@+id/btn_decameron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_decameron"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Go site" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="All Options"
                android:textAlignment="textEnd"
                android:textColor="@color/purple_200"
                android:textSize="30sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/item_background"
                android:elevation="5dp"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Texto de Ejemplo" />
                <TextView
                    android:id="@+id/tv_description_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_1"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    tools:text="Description of Hotel" />
                <Button
                    android:id="@+id/btn_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="GO SITE" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/item_background"
                android:elevation="5dp"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_2"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Name of Hotel" />
                <TextView
                    android:id="@+id/tv_description_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_2"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_2"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    tools:text="Description of Hotel" />
                <Button
                    android:id="@+id/btn_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="GO SITE" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/item_background"
                android:elevation="5dp"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_title_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_3"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Name of Hotel" />
                <TextView
                    android:id="@+id/tv_description_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_3"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_3"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    tools:text="Description of Hotel" />
                <Button
                    android:id="@+id/btn_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="GO SITE" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/item_background"
                android:elevation="5dp"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_title_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_4"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Name of Hotel" />
                <TextView
                    android:id="@+id/tv_description_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_4"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toLeftOf="@id/btn_item_4"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    tools:text="Description of Hotel" />
                <Button
                    android:id="@+id/btn_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="GO SITE" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>